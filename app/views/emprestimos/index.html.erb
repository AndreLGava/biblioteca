<h1><%= t('emprestimos.emprestimos') %></h1>
  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab"><%= t('emprestimos.all')  %></a></li>
    <li role="presentation"><a href="#emprestados" aria-controls="emprestados" role="tab" data-toggle="tab"><%= t('emprestimos.emprestados')  %></a></li>
