  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="home">
            <div class="emprestimos_novos ">
              <br>
              <div class="btn-group pull-right" role="group">
             
                <%= link_to "", excel_gerais_path(:xlsx), target: "blank", class: "fa fa-file-excel-o fa-2x btn btn-success btn-outline" %>
                <%= link_to "", gerais_path(:pdf), target: "blank", class: "fa fa-file-pdf-o fa-2x btn btn-danger btn-outline" %>
            </div>
            <br><br><br>
        <table class="tabela_emprestimos table table-responsive table-striped">
        <tr>
          <th><%= t('livros.titulo') %></th>
          <th><%= t('usuarios.nome') %></th>
          <th><%= t('emprestimos.data_emprestimo') %></th>
          <th><%= t('emprestimos.data_limite') %></th>
          <th><%= t('emprestimos.data_devolucao') %></th>
          <th></th>
          <th></th>
          <th></th>
        </tr>

      <% @emprestimos.each do |emprestimo| %>
        <tr class="emprestimo<%= emprestimo.id %> emprestimo">
          <td><%= link_to emprestimo.livro.titulo, edit_emprestimo_titulo_path(id: emprestimo.id) , remote: true, class: "emprestimo_titulo#{emprestimo.id}" %></td>
          <td><%= link_to emprestimo.usuario.nome, edit_emprestimo_usuario_path(id: emprestimo.id) , remote: true, class: "emprestimo_nome#{emprestimo.id}" %></td>
          <td><%= link_to emprestimo.data_emprestimo , edit_emprestimo_data_emprestimo_path(id: emprestimo.id) , remote: true, class: "emprestimo_data_emprestimo#{emprestimo.id}" %></td>
          <td><%= link_to emprestimo.data_limite, edit_emprestimo_data_limite_path(id: emprestimo.id) , remote: true, class: "emprestimo_data_limite#{emprestimo.id}" %></td>
          <td><%= emprestimo.data_devolucao %></td>
          <td><%= link_to t('links.show'), emprestimo %></td>
          <td><%= link_to t('links.edit'), edit_emprestimo_path(emprestimo), remote: true  %></td>
          <td><%= link_to t('links.destroy'), emprestimo, method: :delete, data: { confirm: t('action.message') }, remote: true  %></td>
        </tr>
        <tr class="edita<%= emprestimo.id %>">
          
          
        </tr>
      <% end %>
      </table>

      </div>

      <div class="form">
        
      </div>
      <br />
      <%= link_to t('emprestimos.new_emprestimo'), new_emprestimo_path, remote: true %>

